@page "/publish-offer"
@using System.ComponentModel.DataAnnotations
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.Logging
@using System.Threading.Tasks
@using System.Net.Http

<h1>Publish Offer</h1>

<EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
    <div class="form-group">
        <label for="offerTitle">Offer Title</label>
        <InputText id="offerTitle" class="form-control" @bind-Value="model.Title" />
        <ValidationMessage For="@(() => model.Title)" />
    </div>
    <div class="form-group">
        <label for="offerDescription">Offer Description</label>
        <InputTextArea id="offerDescription" class="form-control" @bind-Value="model.Description" />
        <ValidationMessage For="@(() => model.Description)" />
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</EditForm>

@code {
    private OfferModel model = new OfferModel();

    private async Task HandleValidSubmit()
    {
        try
        {
            var httpClient = new HttpClient();
            var response = await httpClient.PostAsJsonAsync("api/offers", model);
            response.EnsureSuccessStatusCode();
            // Show success message or redirect to another page
        }
        catch (HttpRequestException ex)
        {
            // Log error or show error message to user
        }
    }

    public class OfferModel
    {
        [Required(ErrorMessage = "Title is required")]
        public string Title { get; set; }

        [Required(ErrorMessage = "Description is required")]
        public string Description { get; set; }
    }
}
