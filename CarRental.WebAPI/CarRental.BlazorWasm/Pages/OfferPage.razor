@page "/publish-offer"
@using System.ComponentModel.DataAnnotations
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.Logging
@using System.Threading.Tasks
@using System.Net.Http

<div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-8 mb-5 mb-lg-0 text-center">
            <h1 style="font-family: Arial Rounded MT; padding: 10px 24px;">Publish Offers</h1>
        </div>
    </div>
</div>

<EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
    <div class="form-group">
        <label class="form-label" for="offerTitle">Offer Title</label>
        <InputText class="form-control" id="offerTitle" placeholder="Title" @bind-Value="model.Title" />
        <ValidationMessage For="@(() => model.Title)" />
    </div>
    <div class="form-group">
        <label class="form-label" for="offerDescription">Offer Description</label>
        <InputTextArea class="form-control" id="offerDescription" @bind-Value="model.Description" />
        <ValidationMessage For="@(() => model.Description)" />
    </div>
    <div class="form-group">
        <label for="discount">Discount (%)</label>
        <InputTextArea type="number" class="form-control" id="discount" name="discount" min="0" max="100" required @bind-Value="model.Discount" />
        <ValidationMessage For="@(() => model.Discount)" />
    </div>
     <div class="form-group py-3"> 
    <button type="submit" class="btn btn-dark">Publish</button>
    </div>
</EditForm>

@code {
    private OfferModel model = new OfferModel();

    private async Task HandleValidSubmit()
    {
        try
        {
            var httpClient = new HttpClient();
            var response = await httpClient.PostAsJsonAsync("api/offers", model);
            response.EnsureSuccessStatusCode();
            // Show success message or redirect to another page
        }
        catch (HttpRequestException ex)
        {
            // Log error or show error message to user
        }
    }

    public class OfferModel
    {
        [Required(ErrorMessage = "Title is required")]
        public string Title { get; set; }

        [Required(ErrorMessage = "Description is required")]
        public string Description { get; set; }

        [Required(ErrorMessage = "Discount is required")]
        public string Discount { get; set; }
    }
}
